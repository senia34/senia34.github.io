<script>
function er1() {
     document.getElementById('p0').innerHTML =" "; 
var e =9;  
var A=[];
for (;e>=0;){
l='i'+e;
A[e]= document.getElementById(l).value;
e--;}
    for (var i = 0; i < 9; i++)
     { for (var j = 0; j < 9-i; j++)
        { if (A[j+1] < A[j])
           { var t = A[j+1]; A[j+1] = A[j]; A[j] = t; }
        }
     }                     
   document.getElementById('p0').innerHTML = document.getElementById('p0').innerHTML +" "+A[0]; 
}
 
</script>




